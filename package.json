{
  "name": "@ajmey/toaster",
  "version": "0.1.2",
  "description": "Simple toaster in vanilla JavaScript for modern browsers.",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css-base": "cleancss -o themes/base.min.css base.css",
    "css-dark": "cleancss -o themes/theme-dark.min.css dark.css base.css",
    "css-default": "cleancss -o themes/theme-default.min.css default.css base.css",
    "cssmin": "yarn css-base && yarn css-dark && yarn css-default",
    "clean": "rm -rf gh-pages/{src,themes}",
    "copy": "cp -r src gh-pages && cp -r themes gh-pages",
    "gh": "yarn clean && yarn copy && gh-pages -d ./gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajmeyghani/toaster.git"
  },
  "keywords": [
    "toaster",
    "plain-javascript",
    "ui-component",
    "ui",
    "notification",
    "alert"
  ],
  "author": "AJ Meyghani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ajmeyghani/toaster/issues"
  },
  "homepage": "https://github.com/ajmeyghani/toaster#readme",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "gh-pages": "^2.2.0"
  },
  "dependencies": {}
}
