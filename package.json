{
  "name": "@ajmey/toaster",
  "version": "0.5.1",
  "description": "Simple toaster in vanilla JavaScript for modern browsers.",
  "main": "index.js",
  "scripts": {
    "predev": "yarn clean",
    "dev": "run-p jsw cssw",
    "d": "yarn dev",
    "e2e": "testcafe chrome e2e/toaster.e2e.js --disable-page-caching",
    "e2ew": "yarn e2e --live --dev --colors",
    "t": "yarn test",
    "clean": "rm -rf index* toaster* themes*",
    "cssd": "./css.sh themes",
    "css": "./css.sh cssmin",
    "cssw": "nodemon --exec bash ./css.sh themes --watch src -e css",
    "js": "NODE_ENV=production rollup --config rollup/rollup.config.js && cp esm/{index*,toaster*,themes*} .",
    "jsw": "rollup --config rollup/rollup.dev.js --watch",
    "prebuild": "yarn clean",
    "build": "yarn css && yarn js",
    "gh": "gh-pages --dist ./ --src '{src/**,themes/**,gh-pages/**,./*.js}'",
    "prep": "yarn build && yarn gh",
    "gzip": "gzip -k esm/*.min.js && gzip -k umd/*.min.js && gzip -k themes/*.min.css",
    "server": "http-server -p 8080",
    "serverd": "http-server -p 8080 -c-1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajmeyghani/toaster.git"
  },
  "files": [
    "/index.js",
    "/index.min.js",
    "/toaster.js",
    "/toaster.min.js",
    "/themes.js",
    "/themes.min.js",
    "/themes",
    "/umd",
    "/LICENSE",
    "/package.json",
    "/readme.md"
  ],
  "keywords": [
    "toaster",
    "plain-javascript",
    "vanilla-javascript",
    "ui-component",
    "ui",
    "notification",
    "alert",
    "toast",
    "toaster"
  ],
  "author": "AJ Meyghani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ajmeyghani/toaster/issues"
  },
  "homepage": "https://github.com/ajmeyghani/toaster#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.8.6",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "clean-css-cli": "^4.3.0",
    "core-js": "^3",
    "ecstatic": "^4.1.4",
    "gh-pages": "^2.2.0",
    "http-server": "^0.12.1",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.31.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-postcss": "^2.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "testcafe": "^1.8.2"
  },
  "dependencies": {}
}
